for group in cpuset memory; do
    for cg in `find /sys/fs/cgroup/$group/ -mindepth 1 -type d`; do
	echo "Removing $cg, moving tasks out..."
	for task in `cat $cg/tasks`; do
            echo $task > /sys/fs/cgroup/$group/tasks 2>/dev/null || \
		echo "Unmovable: `cat /proc/$task/comm`";
	done
	rmdir $cg
	echo "Removing $cg, removing cgroup done."
    done
done
